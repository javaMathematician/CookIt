<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dishCardView"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/darkThemeBackgroundCardColor"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/dishLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkThemeBackgroundCardColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dishImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:text="tEXTTEXTTEXTTEXT"
                android:textColor="@color/darkThemeTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dishIngredients"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/sample_big_text"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>