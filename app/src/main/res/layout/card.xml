<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/darkThemeBackgroundCardColor"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkThemeBackgroundCardColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageOnCard"
            android:layout_width="15dp"
            android:layout_height="120dp"
            android:minWidth="15dp"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@android:color/white" />

        <TextView
            android:id="@+id/textOnCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/darkThemeTextColor"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBoxOnCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:buttonTint="@color/darkThemeTextColor"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>