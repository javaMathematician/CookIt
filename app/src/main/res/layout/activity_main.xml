<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkThemeBackgroundColor"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_purple_gradient"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topTextViewOnToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textColor="@color/darkThemeTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_light_rounded"
        android:backgroundTint="@color/darkThemeBackgroundCardColor"
        android:clickable="true"
        android:focusable="true"
        android:inputType="textPersonName"
        android:text="@string/searchPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:queryBackground="@drawable/bg_dark_rounded"
        app:submitBackground="@color/searchViewColorWhite"
        app:closeIcon="@drawable/close_icon"
        app:theme="@style/SearchViewStyle" />

    <FrameLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      app:layout_constraintBottom_toTopOf="@+id/changeView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/searchView"
      app:layout_constraintVertical_bias="1.0"
      tools:ignore="MissingConstraints"
      android:id="@+id/frameLayout">

        <ScrollView
          android:id="@+id/scrollView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="0dp"
          app:layout_constraintBottom_toTopOf="@+id/changeView"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/searchView"
          app:layout_constraintVertical_bias="0">

            <LinearLayout
              android:id="@+id/allDishesCardHolder"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_outline_purple"
        android:padding="0dp"
        android:text="К рецептам"
        android:textColor="@color/searchViewColorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:queryBackground="@drawable/bg_dark_rounded" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:layout_margin="8dp"
      app:srcCompat="@drawable/close_icon"
      android:id="@+id/floatingActionButton"
      app:layout_constraintEnd_toEndOf="@+id/frameLayout"
      app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
      android:focusable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
