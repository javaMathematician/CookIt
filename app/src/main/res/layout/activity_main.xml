<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/commonAppDarkBackgroundColor"
  tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_orange_rounded"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/topTextViewOnToolbar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/app_name"
      android:textColor="@color/topTextColor"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="@+id/toolbar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.SearchView
      android:id="@+id/searchView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:background="@drawable/bg_dark_rounded"
      android:clickable="true"
      android:focusable="true"
      android:inputType="textPersonName"
      android:text="@string/searchPrompt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:queryBackground="@drawable/bg_dark_rounded"
      app:submitBackground="@drawable/bg_dark_rounded">

    </androidx.appcompat.widget.SearchView>

    <FrameLayout
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/searchView"
      app:layout_constraintBottom_toTopOf="@+id/changeView"
      android:layout_marginTop="8dp"
      android:layout_width="0dp"
      android:layout_height="0dp">

        <ScrollView
          android:id="@+id/scrollView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/allDishesCardHolder">
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/changeView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_margin="0dp"
      android:padding="0dp"
      android:text="К рецептам">
    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>
