<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/selectedCardBackgroundColor" />
            <padding android:top="1dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/selectedCardBackgroundColor" />
            <stroke
                android:width="2dp"
                android:color="?attr/accentColor" />
        </shape>
    </item>
</layer-list>
