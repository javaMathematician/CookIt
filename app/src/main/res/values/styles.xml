<resources>

    <style name="Light" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="homeAsUpIndicator">@color/darkThemeBackgroundCardColor</item>
        <item name="android:itemTextAppearance">@style/TextAppearanceLight</item>
        <item name="android:statusBarColor">@color/toolbarBackgroundLightColor</item>

        <item name="alertDialogTheme">@style/LightDialog</item>

        <item name="logo">@drawable/magenta_logo</item>
        <item name="strokeColor">@color/purpleAccentColor</item>
        <item name="gradient">@color/purpleAccentColor</item>
        <item name="searchViewColor">@android:color/black</item>
        <item name="textCardColor">@color/lightThemeTextColor</item>
        <item name="separatorColor">@color/separatorLightColor</item>
        <item name="toRecipeTextColor">@color/darkThemeTextColor</item>
        <item name="mainBackgroundColor">@color/lightThemeBackgroundColor</item>
        <item name="cardBackgroundColor">@color/lightThemeBackgroundCardColor</item>
        <item name="toolbarBackgroundColor">@color/toolbarBackgroundLightColor</item>
    </style>



    <style name="Dark" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/TextAppearanceDark</item>
        <item name="homeAsUpIndicator">@color/lightThemeBackgroundCardColor</item>
        <item name="android:statusBarColor">@color/toolbarBackgroundDarkColor</item>

        <item name="alertDialogTheme">@style/DarkDialog</item>

        <item name="logo">@drawable/green_logo</item>
        <item name="gradient">@color/greenAccentColor</item>
        <item name="strokeColor">@color/greenAccentColor</item>
        <item name="searchViewColor">@android:color/white</item>
        <item name="textCardColor">@color/darkThemeTextColor</item>
        <item name="separatorColor">@color/separatorDarkColor</item>
        <item name="toRecipeTextColor">@color/darkThemeTextColor</item>
        <item name="mainBackgroundColor">@color/darkThemeBackgroundColor</item>
        <item name="cardBackgroundColor">@color/darkThemeBackgroundCardColor</item>
        <item name="toolbarBackgroundColor">@color/toolbarBackgroundDarkColor</item>
    </style>

    <style name="LightDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/purpleAccentColor</item>
        <item name="android:textColorPrimary">@color/lightThemeTextColor</item>
        <item name="android:background">@color/lightThemeBackgroundCardColor</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/greenAccentColor</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColor</item>
        <item name="android:background">@color/darkThemeBackgroundCardColor</item>
    </style>

    <style name="TextAppearanceLight">
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="TextAppearanceDark">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="toggleArrowDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/textCardColor</item>
    </style>

    <style name="toggleArrowLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/textCardColor</item>
    </style>

    <style name="ButtonSearch">
        <item name="android:colorBackground">@drawable/button_round_corners</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="defaultQueryHint">"Поиск"</item>
        <item name="android:textColor">?attr/searchViewColor</item>
        <item name="closeIcon">@drawable/close_icon</item>
        <item name="hintTextColor">?attr/searchViewColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="queryBackground">?attr/searchViewColor</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:textColorHint">?attr/searchViewColor</item>
        <item name="android:closeIcon">@drawable/close_icon</item>
        <item name="android:editTextColor">?attr/searchViewColor</item>
        <item name="colorControlActivated">?attr/searchViewColor</item>
        <item name="android:queryBackground">?attr/searchViewColor</item>
        <item name="android:searchIcon">@drawable/search_icon</item>
        <item name="searchHintIcon">@drawable/search_icon</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:submitBackground">?attr/searchViewColor</item>
        <item name="background">?attr/searchViewColor</item>
        <item name="backgroundTint">?attr/searchViewColor</item>
        <item name="backgroundColor">?attr/searchViewColor</item>
        <item name="android:backgroundTint">?attr/toolbarBackgroundColor</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="checkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/textCardColor</item>
        <item name="colorControlActivated">?attr/textCardColor</item>
    </style>
</resources>