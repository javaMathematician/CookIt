<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ButtonSeach">
        <item name="android:colorBackground">@drawable/button_round_corners</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="queryBackground">@color/darkThemeTextColor</item>
        <item name="defaultQueryHint">"Поиск"</item>
    </style>
    <style name="checkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/darkThemeBackgroundCardColor</item>
    </style>
</resources>