<resources>
    <style name="Light" parent="Theme.AppCompat.NoActionBar">
        <!-- Toolbar and SearchView -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="homeAsUpIndicator">@color/darkThemeBackgroundCardColor</item>
        <item name="android:itemTextAppearance">@style/TextAppearanceLight</item>
        <item name="android:statusBarColor">@color/toolbarBackgroundLightColor</item>

        <!-- Dialogs and fonts -->
        <item name="alertDialogTheme">@style/LightDialog</item>
        <item name="android:dialogTheme">@style/LightDialog</item>
        <item name="android:fontFamily">@font/montserrat_font</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- Main colors -->
        <item name="textCardColor">@color/textDarkColor</item>
        <item name="searchViewColor">@android:color/black</item>
        <item name="toRecipeTextColor">@color/textLightColor</item>
        <item name="selectedTextCardColor">@color/textDarkColor</item>
        <item name="mainBackgroundColor">@color/lightThemeBackgroundColor</item>
        <item name="cardBackgroundColor">@color/lightThemeBackgroundCardColor</item>
        <item name="toolbarBackgroundColor">@color/toolbarBackgroundLightColor</item>
        <item name="selectedCardBackgroundColor">@color/selectedLightCardBackgroundColor</item>

        <!-- Additional colors -->
        <item name="logo">@drawable/green_logo</item>
        <item name="accentColor">@color/blueAccentColor</item>
        <item name="strokeColor">@color/lightStrokeColor</item>
        <item name="toRecipeButtonColor">@color/blueAccentColor</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Toolbar and SearchView -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/TextAppearanceDark</item>
        <item name="homeAsUpIndicator">@color/lightThemeBackgroundCardColor</item>
        <item name="android:statusBarColor">@color/toolbarBackgroundDarkColor</item>

        <!-- Dialogs and fonts -->
        <item name="alertDialogTheme">@style/DarkDialog</item>
        <item name="android:dialogTheme">@style/DarkDialog</item>
        <item name="android:fontFamily">@font/montserrat_font</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- Main colors -->
        <item name="searchViewColor">@android:color/white</item>
        <item name="textCardColor">@color/textLightColor</item>
        <item name="toRecipeTextColor">@color/textDarkColor</item>
        <item name="selectedTextCardColor">@color/textLightColor</item>
        <item name="mainBackgroundColor">@color/darkThemeBackgroundColor</item>
        <item name="cardBackgroundColor">@color/darkThemeBackgroundCardColor</item>
        <item name="toolbarBackgroundColor">@color/toolbarBackgroundDarkColor</item>
        <item name="selectedCardBackgroundColor">@color/selectedDarkCardBackgroundColor</item>

        <!-- Additional colors -->
        <item name="logo">@drawable/orange_logo</item>
        <item name="strokeColor">@color/darkStrokeColor</item>
        <item name="accentColor">@color/greenAccentColor</item>
        <item name="toRecipeButtonColor">@color/greenAccentColor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="LightDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blueAccentColor</item>
        <item name="android:textColorPrimary">@color/textDarkColor</item>
        <item name="android:background">@color/lightThemeBackgroundCardColor</item>
    </style>


    <style name="DarkDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/greenAccentColor</item>
        <item name="android:textColorPrimary">@color/textLightColor</item>
        <item name="android:background">@color/darkThemeBackgroundCardColor</item>
    </style>

    <style name="LightProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/textDarkColor</item>
        <item name="android:textColorPrimary">@color/textDarkColor</item>
        <item name="android:background">@color/lightThemeBackgroundCardColor</item>
    </style>


    <style name="DarkProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/textLightColor</item>
        <item name="android:textColorPrimary">@color/textLightColor</item>
        <item name="android:background">@color/darkThemeBackgroundCardColor</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">?attr/cardBackgroundColor</item>
        <item name="colorAccent">@color/greenAccentColor</item>
        <item name="android:textColorPrimary">@color/textLightColor</item>
        <item name="android:textColor">@color/textLightColor</item>
    </style>

    <style name="TextAppearanceLight">
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="TextAppearanceDark">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="toggleArrowDark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/textCardColor</item>
    </style>

    <style name="toggleArrowLight" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/textCardColor</item>
    </style>

    <style name="ButtonSearch">
        <item name="android:colorBackground">@drawable/button_round_corners</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="defaultQueryHint">"Поиск"</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="closeIcon">@drawable/close_icon</item>
        <item name="background">?attr/searchViewColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="hintTextColor">?attr/searchViewColor</item>
        <item name="searchHintIcon">@drawable/search_icon</item>
        <item name="backgroundTint">?attr/searchViewColor</item>
        <item name="queryBackground">?attr/searchViewColor</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="backgroundColor">?attr/searchViewColor</item>
        <item name="android:closeIcon">@drawable/close_icon</item>
        <item name="android:textColor">?attr/searchViewColor</item>
        <item name="android:searchIcon">@drawable/search_icon</item>
        <item name="android:textColorHint">?attr/searchViewColor</item>
        <item name="android:editTextColor">?attr/searchViewColor</item>
        <item name="colorControlActivated">?attr/searchViewColor</item>
        <item name="android:queryBackground">?attr/searchViewColor</item>
        <item name="android:submitBackground">?attr/searchViewColor</item>
        <item name="android:backgroundTint">?attr/toolbarBackgroundColor</item>
    </style>

    <style name="checkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/textCardColor</item>
        <item name="colorControlActivated">?attr/textCardColor</item>
    </style>
</resources>